{{paper-input
  class='layout-row flex'
  label=label
  value=filter
  onChange=(action 'autoComplete')
  onFocus=(action 'toggleUi')
  onBlur=(action 'toggleUi')
}}

{{#paper-list}}
  {{#each filteredList as |item|}}
    {{#paper-item onClick=(action 'transitionTo' modelName item)}}
      {{#if (eq modelName 'user')}}
        {{user-avatar user=item classNames='avatar md-avatar'}}
      {{/if}}
      <div class='md-list-item-text'>
        <h4>{{item.name}}</h4>
      </div>
    {{/paper-item}}
  {{/each}}
{{/paper-list}}
