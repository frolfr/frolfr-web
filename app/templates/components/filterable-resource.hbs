{{#paper-autocomplete
  allowClear=true
  options=filteredList
  searchText=(readonly filter)
  onSearchTextChange=(action (mut filter))
  search=(action 'autoComplete')
  searchField='name'
  selected=selectedItem
  labelPath='name'
  placeholder='Search'
  onSelectionChange=(action (mut selectedItem))
  as |item autocomplete|
}}
  {{paper-autocomplete-highlight
    label=item.name
    searchText=autocomplete.searchText
    flags='i'}}
{{/paper-autocomplete}}
