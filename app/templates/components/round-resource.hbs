{{#link-to 'round' round tagName='div'}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#if ignoreCourseName}}
          {{#text.headline}}{{moment-format round.createdAt 'MMMM DD, YYYY'}}{{/text.headline}}
        {{else}}
          {{#text.headline}}{{round.course.name}}{{/text.headline}}
          {{#text.subhead}}{{moment-format round.createdAt 'MMMM DD, YYYY'}}{{/text.subhead}}
        {{/if}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      {{#each round.users as |user|}}
        {{user-avatar user=user}}
      {{/each}}
    {{/card.content}}
  {{/paper-card}}
{{/link-to}}
